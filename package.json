{
  "name": "test-automation-framework",
  "version": "1.0.0",
  "description": "إطار عمل شامل للاختبار الآلي باستخدام Playwright و Appium",
  "main": "index.js",
  "scripts": {
    "setup": "node scripts/setup.js",
    "test:web": "playwright test --config=config/playwright.config.js --reporter=line",
    "test:mobile": "node tests/mobile/runner.js",
    "test:performance": "node tests/performance/runner.js",
    "test:security": "playwright test tests/web/security.spec.js --config=config/playwright.config.js --reporter=json > security-results.json; node generate_security_report.js",
    "test:all": "npm run test:web && npm run test:mobile",
    "test:parallel": "npm run test:web & npm run test:mobile",
    "report": "playwright show-report",
    "report:performance": "open test-results/performance/performance-report.html",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose up --abort-on-container-exit"
  },
  "keywords": [
    "playwright",
    "appium",
    "automation",
    "testing",
    "ci-cd"
  ],
  "author": "MiniMax Agent",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.40.0",
    "appium": "^2.2.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "jimp": "^1.6.0",
    "jimp-compact": "^0.16.1-2",
    "nodemailer": "^6.9.7",
    "qrcode-reader": "^1.0.4",
    "webdriverio": "^8.24.0"
  },
  "devDependencies": {
    "allure-commandline": "^2.25.0",
    "allure-playwright": "^2.10.0"
  }
}